{
  "appId": "com.example.reader",
  "appName": "Reader",
  "webDir": "dist",
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "StatusBar": {
      "style": "default",
      "backgroundColor": "transparent",
      "overlaysWebView": true
    },
    "SplashScreen": {
      "launchShowDuration": 0,
      "launchAutoHide": true,
      "showSpinner": false,
      "splashFullScreen": false,
      "splashImmersive": true
    },
    "DocumentTreeAccess": {
      "ios": {
        "enabled": false
      },
      "android": {
        "enabled": true
      },
      "web": {
        "enabled": true
      }
    }
  },
  "ios": {
    "contentInset": "automatic"
  },
  "android": {
    "allowMixedContent": false,
    "captureInput": false,
    "webContentsDebuggingEnabled": true,
    "backgroundColor": "transparent",
    "navigationBar": {
      "backgroundColor": "transparent",
      "style": "transparent"
    },
    "webView": {
      "backgroundColor": "transparent"
    }
  }
}
