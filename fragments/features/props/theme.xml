<Page>
    <!-- #region PAGE DATA -->
    <Data name="theme" />

    <!-- #endregion PAGE DATA -->

    <!-- FLOWS -->
    <Flow key="changeTheme" debug>
        <SetData name='global_theme' data='flowArgs.theme' />
    </Flow>

    <!-- PAGE NAV BAR-->
    <PageNavBar label="Features / Props / Theme">
        <Box
            display='flex'
            justifyContent="flex-end"
            alignItems="center"
            gap="2"
        >
            <Button
                href="/features"
                label="back"
            />
        </Box>
    </PageNavBar>

    <!-- PAGE CONTENT -->
    <PageContent>
        <Box className="flex-row items-center" gap="1">
            <Typography textContent="Theme:"/>
            <Button textContent="Light" href="flow:changeTheme" flowArgs:theme="light" />
            <Button textContent="Dark" href="flow:changeTheme" flowArgs:theme="dark" />
            <Button textContent="green" href="flow:changeTheme" flowArgs:theme="green" />
            <Button textContent="Orange" href="flow:changeTheme" flowArgs:theme="orange" />
        </Box>

        <Markdown>
            ```xml
                <!-- with sx props -->
                <Box
                    sx:color="error.main"
                    sx:backgroundColor="warning.main"
                    sx:borderColor="warning.dark"
                    border="1px solid"
                />

                <!-- with theme props -->
                <Box
                    color="theme_palette.error.main"
                    backgroundColor="theme_palette.warning.main"
                    border="1px solid {{theme_palette.warning.dark}}"
                />
            ```
            ## References
            [MUI Theme Default](https://mui.com/material-ui/customization/default-theme/)
            [MUI theme docs](https://mui.com/material-ui/customization/theming/)

            ## Values
        </Markdown>

