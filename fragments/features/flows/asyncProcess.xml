            variant="h2"
            my="4"
        >Processes</Typography>
        <NestedTable
            source="processes"
            collapsible="false"
            indented="false"
        >
            <Column label="Process Id">
                <Typography>
                    {{row_ProcessID}}
                </Typography>
            </Column>
            <Column label="Name">
                <Typography>
                    {{row_ProcessName}}
                </Typography>
            </Column>
            <Column label="Control ID">
                <Typography>
                    {{row_controlID}}
                </Typography>
            </Column>
            <Column label="Parent Id">
