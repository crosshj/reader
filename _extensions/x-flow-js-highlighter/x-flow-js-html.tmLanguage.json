{
  "scopeName": "injection.x-flow-js-html",
  "injectionSelector": "L:text.html.basic,L:text.html",
  "patterns": [
    {
      "begin": "(<)(x-flow)([^>]*)(>)",
      "end": "(</)(x-flow)(>)",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.tag.html" },
        "2": { "name": "entity.name.tag.html" },
        "3": {
          "name": "meta.tag.attributes.html",
          "patterns": [
            {
              "match": "\\s+([a-zA-Z][a-zA-Z0-9-]*)",
              "captures": {
                "1": { "name": "entity.other.attribute-name.html" }
              }
            },
            {
              "match": "=",
              "name": "punctuation.separator.key-value.html"
            },
            {
              "match": "\\\"[^\\\"]*\\\"",
              "name": "string.quoted.double.html"
            },
            {
              "match": "'[^']*'",
              "name": "string.quoted.single.html"
            }
          ]
        },
        "4": { "name": "punctuation.definition.tag.html" }
      },
      "endCaptures": {
        "1": { "name": "punctuation.definition.tag.html" },
        "2": { "name": "entity.name.tag.html" },
        "3": { "name": "punctuation.definition.tag.html" }
      },
      "patterns": [
        {
          "include": "source.js"
        }
      ],
      "contentName": "source.js"
    }
  ]
}
